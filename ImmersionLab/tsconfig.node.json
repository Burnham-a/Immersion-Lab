{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "composite": true, // Enable composite
    "noEmit": false, // Ensure emit is not disabled
    // other options

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
